{{#if answerQuestionForm}}
  <div>
    <form>

      <div class="form-group">
        <label for="user">Your username</label>
        {{input type="text" value=user class="form-control" id="user"}}
      </div>

      <div class="form-group">
        <label for="date">Date</label>
        {{input type="date" value=date class="form-control" id="date"}}
      </div>

      <div class="form-group">
        <label for="reply">Answer</label>
        {{textarea type="text" value=reply class="form-control" id="reply"}}
      </div>

      <button class="btn btn-sm btn-info" {{action 'newAnswer'}}>Save</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-sm btn-success" {{action 'answerQuestionForm'}}>Post an answer</button>
{{/if}}
