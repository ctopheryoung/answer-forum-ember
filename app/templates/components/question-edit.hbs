{{#if updateQuestionForm}}
  <h4>Edit Question:</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="question">Question</label>
        {{input value=question id="question" placeholder=post.question}}
      </div>

      <div class="form-group">
        <label for="date">Date</label>
        {{input value=date id="date" placeholder=post.date}}
      </div>

      <div class="form-group">
        <label for="user">User</label>
        {{input value=user id="user" placeholder=post.user}}
      </div>

      <div class="form-group">
        <label for="note">Details</label>
        {{#bs-textarea value=note id="note" placeholder=post.note}}{{/bs-textarea}}
      </div>

      <button {{action 'updateQuestion' question}}>Save</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-sm btn-default" {{action 'updateQuestionForm'}}>Edit Question</button>
{{/if}}
