{{#if question.answers}}
    {{#paper-subheader}}{{answerCount}} (sorted by highest scoring first){{/paper-subheader}}

    {{#paper-list}}
      {{#each sortedAnswers as |answer|}}
        {{#paper-item class="md-3-line"}}

          <div class="score">
            <p><span class="number">{{answer.score}}</span><br>points</p>
          </div>
          <div class="votes">
            <a class="upVote" {{action "upVote" answer}}>{{paper-icon "arrow-drop-up"}}</a><br>
            <a class="downVote" {{action "downVote" answer}}>{{paper-icon "arrow-drop-down"}}</a>
          </div>
          <div class="md-list-item-text">
            <h3>{{answer.reply}}</h3>
            <p><em>Posted by {{answer.user}} on {{answer.date}}</em></p>
          </div>
        {{/paper-item}}
        {{paper-divider}}
      {{/each}}
    {{/paper-list}}
  {{else}}
      {{#paper-subheader class="md-no-sticky"}}No one has answered this question yet.{{/paper-subheader}}
  {{/if}}
